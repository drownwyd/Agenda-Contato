<Window x:Class="ContactsApp.Views.ContactFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactsApp.Views"
        xmlns:converters="clr-namespace:ContactsApp.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Converters -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#757575"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,15">
            <TextBlock Text="{Binding WindowTitle}" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Validation Errors -->
                <ItemsControl ItemsSource="{Binding ValidationErrors}" Margin="0,0,0,10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FFEBEE" 
                                    BorderBrush="#F44336" 
                                    BorderThickness="1" 
                                    Padding="10" 
                                    Margin="0,2"
                                    CornerRadius="4">
                                <TextBlock Text="{Binding}" 
                                           Foreground="#C62828" 
                                           TextWrapping="Wrap"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- First Name (Required) -->
                <TextBlock Text="Nome *" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FormTextBox}"/>

                <!-- Last Name -->
                <TextBlock Text="Sobrenome" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FormTextBox}"/>

                <!-- Company -->
                <TextBlock Text="Empresa" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding Company, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FormTextBox}"/>

                <!-- Primary Phone -->
                <TextBlock Text="Telefone Principal" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding PrimaryPhone, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FormTextBox}"/>

                <!-- Secondary Phone -->
                <TextBlock Text="Telefone Secundário" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding SecondaryPhone, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FormTextBox}"/>

                <!-- Email -->
                <TextBlock Text="Email" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FormTextBox}"/>

                <!-- Address -->
                <TextBlock Text="Endereço" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FormTextBox}"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>

                <!-- Notes -->
                <TextBlock Text="Observações" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FormTextBox}"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>

                <!-- Photo Path -->
                <TextBlock Text="Foto" Style="{StaticResource FormLabel}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" 
                             Text="{Binding PhotoPath, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource FormTextBox}"
                             IsReadOnly="True"/>
                    
                    <Button Grid.Column="1" 
                            Content="Procurar..." 
                            Command="{Binding BrowsePhotoCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Margin="5,0,0,10"/>
                    
                    <Button Grid.Column="2" 
                            Content="Limpar" 
                            Command="{Binding ClearPhotoCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Margin="5,0,0,10"/>
                </Grid>

                <!-- Photo Preview -->
                <Border BorderBrush="#CCCCCC" 
                        BorderThickness="1" 
                        Margin="0,10,0,0"
                        Height="150"
                        Background="#F5F5F5"
                        Visibility="{Binding PhotoPath, Converter={StaticResource StringToVisibilityConverter}}">
                    <Image Source="{Binding PhotoPath}" 
                           Stretch="Uniform"
                           Margin="5"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="20,15" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Salvar" 
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource PrimaryButton}"
                        IsDefault="True"/>
                <Button Content="Cancelar" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButton}"
                        IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
